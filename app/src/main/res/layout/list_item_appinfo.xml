<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_app_icon"
        android:textColor="#223344"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_item_app_icon"
        android:textColor="#223344"
        android:padding="4dp"/>


    <TextView
        android:id="@+id/list_item_package_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_item_package_name"
        android:textColor="#223344"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_package_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_item_package_dir"
        android:textColor="#223344"
        android:padding="4dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#000000"/>
</RelativeLayout>